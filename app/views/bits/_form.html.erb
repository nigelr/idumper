<% form_for @bit do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :size=>"100x20" %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
